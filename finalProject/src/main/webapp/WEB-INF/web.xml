<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Archetype Created Web Application</display-name>

    <servlet>
        <servlet-name>Index</servlet-name>
        <jsp-file>/WEB-INF/view/index.jsp</jsp-file>
    </servlet>

    <servlet>
        <servlet-name>SighIn</servlet-name>
        <jsp-file>/WEB-INF/view/sighIn.jsp</jsp-file>
    </servlet>

    <servlet>
        <servlet-name>SighUp</servlet-name>
        <jsp-file>/WEB-INF/view/sighUp.jsp</jsp-file>
    </servlet>

    <servlet>
        <servlet-name>Admin</servlet-name>
        <jsp-file>/WEB-INF/view/admin.jsp</jsp-file>
    </servlet>

    <servlet>
        <servlet-name>Customer</servlet-name>
        <jsp-file>/WEB-INF/view/customer.jsp</jsp-file>
    </servlet>

    <servlet>
        <servlet-name>AdminPrivateOffice</servlet-name>
        <jsp-file>/WEB-INF/view/adminPrivateOffice.jsp</jsp-file>
    </servlet>

    <servlet>
        <servlet-name>BuyingPage</servlet-name>
        <jsp-file>/WEB-INF/view/buyingPage.jsp</jsp-file>
    </servlet>

    <servlet>
        <servlet-name>PasswordRecovery</servlet-name>
        <jsp-file>/WEB-INF/view/passwordRecovery.jsp</jsp-file>
    </servlet>

    <servlet>
        <servlet-name>ResetPassword</servlet-name>
        <jsp-file>/WEB-INF/view/resetPassword.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>Index</servlet-name>
        <url-pattern>/MainPage</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>SighIn</servlet-name>
        <url-pattern>/sighIn</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>SighUp</servlet-name>
        <url-pattern>/sighUp</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Admin</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Customer</servlet-name>
        <url-pattern>/customer</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>AdminPrivateOffice</servlet-name>
        <url-pattern>/adminPrivateOffice</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>BuyingPage</servlet-name>
        <url-pattern>/buyingPage</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>PasswordRecovery</servlet-name>
        <url-pattern>/passwordRecovery</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ResetPassword</servlet-name>
        <url-pattern>/resetPassword</url-pattern>
    </servlet-mapping>

    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/view/pageNotFound.jsp</location>
    </error-page>

    <error-page>
        <error-code>500</error-code>
        <location>/WEB-INF/view/errorOccurredPage.jsp</location>
    </error-page>

</web-app>
